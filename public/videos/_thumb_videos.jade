h1 #{subtitle}
section
  p #{about}<br>Site: <a href="#{site}" target="_blank">#{site}</a>
div.row
  each partner in partners
    each video in partner.videos
      div.col-sm-6.col-md-4
        div.thumbnail
          img(src="/images/#{partner.image}" class="img-rounded" width="250" height="120")
          div.caption.text-center
            h3 #{video.title}
            p.video-description #{video.description}
            p.video-metadata <small>Author: <a href="#{partner.site_url}" target="_blank">#{partner.site}</a> | Duration: #{video.duration}</small>
            p <a href="#{video.url}" class="btn btn-success btn-block" role="button" target="_blank">Watch</a>