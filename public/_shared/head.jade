meta(charset="utf-8")
if subtitle
  title #{subtitle} | #{title}
else
  title #{title}
meta(name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no")
meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
meta(name="apple-mobile-web-app-capable" content="yes")
meta(name="author" content="#{title}")
meta(name="description" content="#{description}")
meta(property="og:title" content="#{title}")
meta(property="og:description" content="#{description}")
meta(property="og:url" content="#{root_url[environment]}")
meta(property="og:site_name" content="#{title}")
meta(property="og:image" content="#{root_url[environment]}images/devfreecasts-thumb.png")
meta(property="og:type" content="website")
meta(property="article:author" content="https://plus.google.com/+CaioRibeiroPereira")
meta(property="article:section" content="main")
meta(name="twitter:creator" content="@crp_underground")
meta(name="twitter:card" content="summary")
meta(name="twitter:url" content="#{root_url[environment]}")
meta(name="twitter:title" content="#{title}")
meta(name="twitter:description" content="#{description}")
meta(name="twitter:image" content="#{root_url[environment]}images/devfreecasts-thumb.png")
link(rel="icon" href="#{root_url[environment]}favicon.ico" type="image/x-icon")
link(rel="stylesheet" href="#{root_url[environment]}css/main.min.css")
link(href="//fonts.googleapis.com/css?family=Open+Sans:400,700" rel="stylesheet" type="text/css")