h3.center #{description}
section.row
for category, slug in public.categories._data
  - total_videos = 0
  for partner in category.partners
    if partner.publish
      - total_videos = total_videos + partner.videos.length
  if total_videos
    div.col-sm-6.col-md-4
      div.jumbotron
        figure.jumbotron-photo
          a(href="/categories/#{slug}")
            img(src="/images/#{category.image}" width="350" height="195")
        article.jumbotron-contents
          p.center
            a(href="/categories/#{slug}" class="btn btn-block btn-primary") #{category.subtitle} (#{total_videos} videos)
